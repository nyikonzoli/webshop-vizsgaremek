<Window x:Class="AdminWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <StackPanel>
        <Label Width="300">Email:</Label>
        <TextBox x:Name="adminEmail" Width="300"></TextBox>
        <Label Width="300" Margin="0 20 0 0">Password</Label>
        <PasswordBox Width="300" Name="adminPassword"></PasswordBox>
        <Button x:Name="login" Click="login_Click" Width="100" Margin="0 20 0 0">Login</Button>
    </StackPanel>
</Window>
